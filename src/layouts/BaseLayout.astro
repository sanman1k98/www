---
import "@fontsource-variable/quicksand";
import "@fontsource-variable/red-hat-display";
import type { HTMLAttributes } from "astro/types";
import Meta from "@/components/HeadMeta.astro";

type Props = HTMLAttributes<"body"> & {
  "title": string;
  "description"?: string;
  /** Content for the `theme-color` meta tag. */
  "theme-color"?: string;
};

const {
  class: className,
  style,
  "theme-color": themeColor = "#FFF",
  ...meta
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <Meta {...meta} />
    <meta name="theme-color" content={themeColor} />
    <slot name="head" />
  </head>
  <body class={className} {style}>
    <slot />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Cascadia Code PL";
    src: url("/fonts/CascadiaCodePL.woff2") format("woff2");
    font-style: normal;
    font-weight: 200 700;
  }
  @font-face {
    font-family: "Cascadia Code PL";
    src: url("/fonts/CascadiaCodePLItalic.woff2") format("woff2");
    font-style: italic;
    font-weight: 200 700;
  }
</style>
