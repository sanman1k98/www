---
import BaseLayout from "./BaseLayout.astro";
import Banner from "@/components/Banner.astro";
import Footer from "@/components/Footer.astro";

interface Props {
  title: string;
  description?: string;

  /**
   * Styles the `<main>` element.
   */
  class?: string;
};

const { class: className, ...head } = Astro.props;
---

<BaseLayout class="relative" { ...head }>
  <Banner class="absolute inset-x-0 top-0"/>
  <main
    class:list={[
      className,
      "relative min-h-screen",
    ]}
  >
    <div
      style="filter: url(#noise);"
      class="
        -z-50 absolute inset-0
      "
    />
    <div
      class="
        -z-50 absolute inset-0
        bg-gradient-to-b from-sky-50/80 to-white/70
        mix-blend-lighten
      "
    />
    <slot />
  </main>
  <Footer class="absolute inset-x-0 bottom-0"/>
  <svg class="hidden">
    <defs>
      <filter id="noise">
        <feTurbulence baseFrequency="0.001 0.01"/>
      </filter>
    </defs>
  </svg>
</BaseLayout>
