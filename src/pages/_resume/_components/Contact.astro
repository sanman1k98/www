---
import type { HTMLAttributes } from "astro/types";
import ContactLink from "./ContactLink.astro";
import { env } from "@/utils"
import { socials } from "@/content";

type Props = HTMLAttributes<"address">;
const { class: className } = Astro.props;
const { github: gh, linkedin: li } = socials;
---

<address class:list={["", className]}>
  <ul>
    {import.meta.env.DEV && (
      <>
        {env.EMAIL && (
          <li>
            <a href={`mailto:${env.EMAIL}`}>email</a>
          </li>
        )}
        {env.PHONE && (
          <li>
            <a href={`tel:${env.PHONE}`}>phone</a>
          </li>
        )}
      </>
    )}
    <li>
      <ContactLink
        href={gh.url}
        title="github"
        text={gh.username!}
      />
    </li>
    <li>
      <a href={li.url}>linkedin</a>
    </li>
  </ul>
</address>
