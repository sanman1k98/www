---
import type { CvEntry } from "@/content";

type Props = {
  entry: CvEntry<"skills">;
  class?: string;
};

const { entry, class: className } = Astro.props;
const { Content } = await entry.render();
---

<style>
  /* Remove default disclosure triangle icon */
  summary::-webkit-details-marker,
  summary::marker { display: none; content: ""; }

  /* Spacing */
  details { margin-bottom: 0.5rem; }
  details > summary { margin-bottom: 0.5rem; }
  details > :global(:not(summary)) { margin-left: 1ch; }
  details[open] { margin-bottom: 1.25rem; }

  /* Custom disclosure icons */
  details > summary::after { content: '+'; margin-left: 0.5rem; }
  details[open] > summary::after { content: "-"; }

  @media print {
    summary::after { display: none; }
  }
</style>

<details class:list={["", className]}>
  <summary class="text-lg font-600 cursor-pointer">{entry.data.skills}</summary>
  <Content />
</details>
