---
type Props = {
  heading: string;
  class?: string;
};

const { heading, class: className } = Astro.props;

const id = heading
  .toLowerCase()
  .split(" ")
  .join("-");
---

<section class:list={["mt-6", className]}>
  <h2 id={id} class="mb-4 font-600 text-xs text-slate-500 uppercase tracking-[0.2em]">
    <a href={("#").concat(id)} class="flex gap-x-2 whitespace-nowrap">
      <span aria-hidden="true">#</span>
      <span>{heading}</span>
      <span aria-hidden="true" class="inline-block h-px w-full self-center bg-slate-300"></span>
    </a>
  </h2>
  <slot />
</section>
