---
import type {
  InferGetStaticParamsType,
  InferGetStaticPropsType,
  GetStaticPaths
} from "astro";
import Page from "@/layouts/MainLayout.astro";
import { photos } from "@/content";

// TODO: use the `paginate()` function to create pages for each photo
export const getStaticPaths = (() => 
  photos.map(photo => ({
    params: { slug: photo.slug },
    props: { photo },
  }))
) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;
type Params = InferGetStaticParamsType<typeof getStaticPaths>;

const { photo } = Astro.props;
const { slug, src: { format: _, ...attrs } } = photo;
---

<Page
  title={photo.alt}
  class="flex flex-col items-center"
>
  <figure
    transition:name={`photo-${slug}`}
    class="
      mt-30 md:mt-36 mx-4 border-white border-12
      shadow-xl
    "
  >
    <img
      { ...attrs }
      alt={photo.alt}
      decoding="async"
      loading="lazy"
    />
  </figure>
</Page>
