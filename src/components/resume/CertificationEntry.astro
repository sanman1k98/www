---
import Entry from "./BaseEntry.astro";
import type { CvEntry } from "@/content";

type Props = { entry: CvEntry<"certification"> };
const { entry } = Astro.props;

const date = entry.data.issueDate.toLocaleString(
  "en",
  {
    year: "numeric",
    month: "long",
    timeZone: "UTC",
  }
);
---

<Entry { entry }>
  <Fragment slot="heading">{entry.data.name}</Fragment>
  <Fragment slot="subheading">{entry.data.organization.name}</Fragment>
  <time class="leading-tight font-500 text-slate-400" slot="after-subheading">{date}</time>
</Entry>
