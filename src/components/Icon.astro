---
const icons = {
  github: "i-ph-github-logo-duotone",
  linkedin: "i-ph-linkedin-logo-duotone",
};

type Icon = keyof typeof icons;

type Props = {
  // `(string & {})` allows passing of any string while also getting
  // autocomplete for the keys of `icons`.
  name: Icon | (string & {}),
  label?: string,
  class?: string,
};

const a11y = Astro.props.label
  ? ({ "aria-label": Astro.props.label } as const)
  : ({ "aria-hidden": "true" } as const);
---

<div { ... a11y } class:list={[
  icons[Astro.props.name as Icon],
  Astro.props.class,
]}/>
