---
import Logo from "./Logo.astro";
import Nav from "./Nav.astro";

type Props = {
  class?: string,
  style?: string,
  /**
   * Set to `true` to absolutely position the `<header>` at the top and remove
   * from normal flow.
   */
  fixed?: boolean,
};

const {
  class: className,
  style,
  fixed = false,
} = Astro.props;
---

<header
  {style}
  class:list={[
    className,
    "flex justify-between items-center gap-x-2 px-[7vw] sm:px-8 z-50",
    "bg-white/85 backdrop-blur-md border-b",
    fixed ? "fixed inset-x-0" : "sticky", "top-0"
  ]}
>
  <Logo class=""/>
  <Nav class="text-sm sm:text-base tracking-wider"/>
</header>
