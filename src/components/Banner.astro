---
import Logo from "./Logo.astro";
import Nav from "./Nav.astro";

type Props = { class?: string };
const { class: className } = Astro.props;
---

<header
  class:list={[
    className,
    "flex flex-col mx-auto items-center p-8",
    "sm:flex-row sm:justify-between",
    "z-50",
  ]}>
  <Logo />
  <Nav />
</header>
