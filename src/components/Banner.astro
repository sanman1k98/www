---
import type { HTMLAttributes } from "astro/types";
import Logo from "./Logo.astro";
import Nav from "./Nav.astro";

type Props = HTMLAttributes<"header"> & {
  /** Set to `true` to position at the top of the layout and remove from normal flow. */
  fixed?: boolean | undefined;
};

const { fixed = false } = Astro.props;
---

<header
  style={Astro.props.style}
  class="top-0 z-50 flex items-center justify-between gap-x-2 border-b bg-white/85 px-[7vw] backdrop-blur-md sm:px-8"
  class:list={[Astro.props.class, fixed ? "fixed inset-x-0" : "sticky"]}
>
  <Logo />
  <Nav class="text-sm tracking-wider sm:text-base" />
</header>
